<nav class="navbar" role="navigation">
  <div class="navbar-header">
    <h2 class ="navbar-brand">Welcome to Poetry and Emotion</h2>
  </div>
  <div class="poetry-container">
    <%= image_tag("book_and_pen.jpeg", class: "quill") %>
  </div>
  <div class="search-containter">
    <ul class="search">
      <%= form_tag(search_path, method: "get") do %>
        <%= text_field_tag(:author, nil, placeholder: "Enter Author Name")%>
        <%= submit_tag('Get Poems', class: "button") %>
      <% end %>
    </ul>
  </div>

  <% @poems.each do |poem| %>
    <div>
    <h3>Title: <%= poem.title %></h3>
    <h4>Author: <%= poem.author %></h4>
    <h5>Tone: <%= poem.tone.join(',') %></h5>
    <p><%= poem.lines %></p>
    </div>
  <% end %>
</nav>